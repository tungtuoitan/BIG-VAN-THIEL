            "type": "integer",
            "format": "int32"
          },
          "product": {
            "$ref": "#/components/schemas/Product"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "unitPrice": {
            "type": "number",
            "format": "double"
          },
          "totalPrice": {
            "type": "number",
            "format": "double"
          },
          "purchaseId": {
            "type": "integer",
            "format": "int32"
          },
          "purchase": {
            "$ref": "#/components/schemas/Purchase"
          }
        },
        "additionalProperties": false
      },
      "PurchaseStatus": {
        "enum": [
          0,
          1,
          2,
          3,
          4
        ],
        "type": "integer",
        "format": "int32"
      },
      "User": {
        "required": [
          "address",
          "dateOfBirth",
          "email",
          "firstName",
          "isActive",
          "lastName",
          "password",
          "phoneNumber",
          "role",
